<link href="css/card.css" rel="stylesheet" />

<div id="card-container">
	<div id="card-content">
		<h1>
			@QuestionTitle
		</h1>
		<div class="description">
			@QuestionDescription
		</div>

		<form>
			@foreach (var option in Options)
			{
				<input type="radio" id="@option.Name" name="option" value="@option.Name">
				<label for="@option.Name">@option.Title</label><br>
			}

			<input type="radio" id="sin-importancia" name="option" value="sin-importancia">
			<label for="sin-importancia">Sin importancia</label><br>
		</form>

	</div>
</div>


@code {
	[Parameter]
	public string QuestionTitle { get; set; }

	[Parameter]
	public string QuestionDescription { get; set; }

	[Parameter]
	public List<QuestionOption> Options { get; set; }

